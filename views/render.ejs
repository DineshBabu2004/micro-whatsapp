<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Micro-Whatsapp</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h1>Chats History</h1>
    <br>
    <form  method = "get"  action ="/display/new">
             <button> Add Nostalgic Sentence</button>
    </form>
     
    <br>
    <div class="main">
    <% for (let chat of chats) { %>
       
        <div class ="chat">
            <p>From : <%= chat.from %></p>
            <p class="msg">Message : <%= chat.msg %></p>
            <p>To : <%= chat.to %></p>
            <hr>
            <p> <%= chat.Date.toString().split(" ")[4] %></p>
            <p> <%= chat.Date.toString().split(" ").slice(0,4).join(" ") %></p>
            <p> <%= chat.Date.toString()%></p>
            <hr>
            <div class="buttons">
                <form  method = "GET"action="/display/<%= chat._id %>">
                    <button>edit</button></form>
                    <form  method="post" action="/display/<%= chat._id %>?_method=DELETE">
                        <button>Delete</button>
                    </form>
            </div>
            
        </div>

        <br><br>
  <% } %>  
    </div>
</body>
</html>